<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBankApp.OpenAcc"
             Title="">
    
    <VerticalStackLayout
        Margin="20"
        Spacing="10">

        <Label
            Text="New Account"
            HorizontalOptions="Center"
            FontSize="Header"/>

        <VerticalStackLayout
            Spacing="20"
            Margin="30"
            HorizontalOptions="Center">

            <Label
                Text="Select the type of account you want to open:"
                HorizontalOptions="Center"
                FontSize="20"/>

            <Button
                Text="Basic Account"
                FontSize="Body"
                WidthRequest="250"
                Clicked="BasicAcc"
                />

            <Button
                Text="Chequings Account"
                FontSize="Body"
                WidthRequest="250"
                Clicked="ChequingAcc"
                />

            <Button
                Text ="Savings Account"
                FontSize ="Body"
                WidthRequest="250"
                Clicked="SavingAcc"
                />

        </VerticalStackLayout>

        <ImageButton 
            Source="point.png"
            WidthRequest="50"
            HeightRequest="50"
            Clicked="BtnBackClicked"/>
        
    </VerticalStackLayout>
</ContentPage>