<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBankApp.Deposit"
             Title="Deposit">
    <VerticalStackLayout>
        <Label 
            Text="Enter the amount desired"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize="Header"/>

        <Entry
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="WithdrawAmount"
                          
            />

        <Button
            Text="Deposit"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="DepositBtn"
            
            />

        <Label
            
            Text=""
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="MoneyDeposit"
            />


    </VerticalStackLayout>
</ContentPage>