<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBankApp.Deposit"
             Title="">
    <VerticalStackLayout
        Margin="20"
        Spacing="20">
        <Label 
            Text="Enter the amount desired"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize="Header"/>

        <Entry
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="DepositAmount"
            WidthRequest="250"       
            />

        <Button
            Text="Deposit"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="DepositBtn"
            
            />

        <Label
            
            Text=""
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="MoneyDeposit"
            />

        <ImageButton 
           Source="point.png"
           WidthRequest="50"
           HeightRequest="50"
           Clicked="BtnBackClicked"
     
         />



    </VerticalStackLayout>
</ContentPage>