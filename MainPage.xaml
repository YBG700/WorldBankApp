<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBankApp.MainPage"
             Title="">


    <ScrollView>
        
        <VerticalStackLayout 
            Margin="20"
            Spacing="10"
            HorizontalOptions="Center">
            
            <Label 
                Text="World Bank"
                Style="{StaticResource Headline}"
                FontSize="50" />

            <Label 
                Text="Exploiting your money since 1756."
                FontAttributes="Italic"
                HorizontalTextAlignment="Center"
                FontSize="18"/>

            <VerticalStackLayout 
                Spacing="20"
                Margin="70">
                
                <Button Text="Create Account"
                        x:Name="BtnOpenAccount"
                        Clicked="AccountOpen"
                        WidthRequest="250"/>

                <Button Text="Log In"
                        Clicked="AccountSearch"
                        x:Name="BtnSearchAccount"
                        WidthRequest="250"/>

            </VerticalStackLayout>
            
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>