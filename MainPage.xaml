<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBankApp.MainPage"
             Title="World Bank">


    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Welcome to World Bank"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"
                   FontAttributes="Italic"
                   FontSize="Header" />

            <StackLayout Orientation="Horizontal" Spacing="50">
                <Button Text="Create Account"
                        x:Name="BtnOpenAccount"
                        HorizontalOptions="Start"
                        Clicked="AccountOpen"
                        />


                <BoxView WidthRequest="0" HorizontalOptions="FillAndExpand" /> <!-- What the fuck does this do? LMAOOOOOOO -->

                <Button Text="Log In"
                        Clicked="AccountSearch"
                        FontSize = "Body"
                        x:Name="BtnSearchAccount"
                        HorizontalOptions="End" />

            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>