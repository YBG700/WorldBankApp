<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBankApp.MainPage"
             Title="World Bank"
             BackgroundImageSource="bag_of_money.png"
             >
      

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Welcome to World Bank"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"
                   FontAttributes="Italic"
                   FontSize="Header" />

            <StackLayout Orientation="Horizontal" Spacing="50">
                <Button Text="Open Account: "
                        x:Name="BtnOpenAccount"
                        HorizontalOptions="Start" />


                <BoxView WidthRequest="0" HorizontalOptions="FillAndExpand" />

                <Button Text="Search Account: "
                        Clicked="AccountSearch"
                        FontSize = "Body"
                        x:Name="BtnSearchAccount"
                        HorizontalOptions="End" />

            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
